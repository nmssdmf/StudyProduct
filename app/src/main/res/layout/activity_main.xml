<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:app="http://schemas.android.com/apk/res-auto"
         xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.nmssdmf.studyprodect.viewmodel.MainVM"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_knowledge"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/red"
            android:text="Knowledge"
            android:gravity="center"
            android:textSize="30dp"
            android:onClick="@{(v)->vm.tvKnowledgeClick(v)}"
            />

        <TextView
            android:id="@+id/tv_studio"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/green"
            android:text="Studio"
            android:gravity="center"
            android:textSize="30dp"
            android:onClick="@{(v)->vm.tvStudioClick(v)}"/>

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/blue"
            android:text="Question"
            android:gravity="center"
            android:textSize="30dp"
            android:onClick="@{(v)->vm.tvQuestionClick(v)}"/>
    </LinearLayout>
</layout>

